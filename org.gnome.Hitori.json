{
  "app-id": "org.gnome.Hitori",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.36",
  "sdk": "org.gnome.Sdk",
  "command": "hitori",
  "finish-args":
    [
      /* X11 + XShm access */
      "--share=ipc", "--socket=fallback-x11",
      /* Wayland access */
      "--socket=wayland",
      "--metadata=X-DConf=migrate-path=/org/gnome/hitori/"
    ],
  "cleanup":
    [
      "/include", "/lib/pkgconfig",
      "/share/pkgconfig", "/share/aclocal",
      "/man", "/share/man", "/share/gtk-doc",
      "*.la", "*.a",
      "/lib/girepository-1.0",
      "/share/dbus-1", "/share/doc", "/share/gir-1.0"
    ],
  "modules":
    [
      {
        "name": "hitori",
        "buildsystem": "meson",
        "sources":
          [
            {
              "type": "archive",
              "url": "https://download.gnome.org/sources/hitori/3.36/hitori-3.36.0.tar.xz",
              "sha256": "456f76faed46287e2c53ec468c0aa6293bb6d92ca285baa0d573d795d1960157"
            }
          ]
      }
    ]
}
