{
  "app-id": "org.gnome.Hitori",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.34",
  "sdk": "org.gnome.Sdk",
  "command": "hitori",
  "finish-args":
    [
      /* X11 + XShm access */
      "--share=ipc", "--socket=x11",
      /* Wayland access */
      "--socket=wayland",
      "--metadata=X-DConf=migrate-path=/org/gnome/hitori/"
    ],
  "cleanup":
    [
      "/include", "/lib/pkgconfig",
      "/share/pkgconfig", "/share/aclocal",
      "/man", "/share/man", "/share/gtk-doc",
      "*.la", "*.a",
      "/lib/girepository-1.0",
      "/share/dbus-1", "/share/doc", "/share/gir-1.0"
    ],
  "modules":
    [
      {
        "name": "hitori",
        "buildsystem": "meson",
        "sources":
          [
            {
              "type": "git",
              "url": "https://gitlab.gnome.org/GNOME/hitori.git",
              "tag": "3.34.0",
              "commit": "8859bfe3ecd8a4c3ee198ef62f211a09b5cfbd0a"
            }
          ]
      }
    ]
}
